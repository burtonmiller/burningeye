<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@id/top"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@id/bkg_view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:weightSum="10">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="7"
            android:orientation="vertical">

            <TextView
                android:id="@+id/settings_music_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10.0dip"
                android:shadowColor="#ff000000"
                android:shadowRadius="2.0"
                android:text="Music Volume"
                android:textColor="@color/control_text"
                android:textSize="24.0sp"
                android:textStyle="bold"/>

            <SeekBar
                android:id="@+id/settings_music"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="10"
                android:thumbTint="@color/control_text"
                android:backgroundTint="@color/upgrade"
                android:foregroundTint="@color/control_text"
                android:progressTint="@color/control_text"
            />


            <TextView
                android:id="@+id/settings_soundfx_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10.0dip"
                android:shadowColor="#ff000000"
                android:shadowRadius="2.0"
                android:text="Sound FX Volume"
                android:textColor="@color/control_text"
                android:textSize="24.0sp"
                android:textStyle="bold"/>

            <SeekBar
                android:id="@+id/settings_soundfx"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="10"
                android:thumbTint="@color/control_text"
                android:backgroundTint="@color/upgrade"
                android:foregroundTint="@color/control_text"
                android:progressTint="@color/control_text"
            />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/settings_back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_margin="8.0dip"
        android:text="&lt;"
        android:textColor="@drawable/text_button"
        android:textSize="36.0sp"
        android:textStyle="bold"/>

</RelativeLayout>